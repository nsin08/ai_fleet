# AI Fleet — Environment Variables
# Copy this to .env and fill in values. Never commit .env

# ── PostgreSQL ─────────────────────────────────────────────────────────────────
POSTGRES_PASSWORD=fleet_dev_pw
DATABASE_URL=postgres://fleet:fleet_dev_pw@localhost:5432/ai_fleet

# ── Ollama (Local AI — runs on host, NOT in Docker) ──────────────────────────
# For local dev: http://localhost:11434
# From inside Docker containers: http://host.docker.internal:11434
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=deepseek-r1:8b
OLLAMA_EMBED_MODEL=mxbai-embed-large:latest

# ── API ────────────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# ── Web (Next.js) ─────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

# ── Vehicle Emitter ────────────────────────────────────────────────────────────
# These are set per-container; provide defaults for local dev
VEHICLE_ID=00000000-0000-0000-0000-000000000001
VEHICLE_REG_NO=MH12AB1234
API_BASE_URL=http://localhost:3001
EMIT_INTERVAL_MS=2000

# ── Neo4j Graph Vector Store ──────────────────────────────────────────────────
# Local dev (neo4j running directly): bolt://localhost:7687
# Inside Docker Compose: bolt://neo4j:7687
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
# Used as NEO4J_AUTH=neo4j/<password> in Docker; also injected as NEO4J_PASSWORD_GRAPH
NEO4J_PASSWORD=password
NEO4J_AUTH=neo4j/password
